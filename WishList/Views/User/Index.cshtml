@model IEnumerable<WishList.Models.User>

@{
    ViewBag.Title = "Index";
}

<h2>Registered Users</h2>

<div>
    @Html.ActionLink("Manage Products", "Index", "Product",null,null)
</div>
<div>
    @Html.ActionLink("Manage Wish List","ManageWishList", new { watchedUserId = ViewBag.User.Id }, null)
</div>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id })
        </td>
    </tr>
}

</table>
